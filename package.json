{
  "scripts": {
    "build:js": "browserify src/javascripts/index.js | uglifyjs > assets/bundle.js",
    "build:css": "node-sass src/stylesheets/index.scss | autoprefixer-cli | cleancss > assets/bundle.css",
    "build": "mkdirp assets && npm-run-all build:*",
    "start": "npm run watch"
    "watch": "chokidar 'src/**' -c 'npm run build'",
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "snackbar": "^1.0.0-alpha.3"
  },
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "chokidar-cli": "^1.2.0",
    "clean-css": "^3.4.8",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.3.2",
    "uglifyjs": "^2.4.10",
  }
}
